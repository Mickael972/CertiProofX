# Gas Configuration
GAS_PRICE_GWEI=20
GAS_LIMIT=5000000
AUTO_GAS_MULTIPLIER=1.2

# Deployment Configuration
TOKEN_NAME=CertiProof X
TOKEN_SYMBOL=CERTX
INITIAL_OWNER=0x1E274F39A44f1561b3Bb21148B9881075575676D

# Contract Verification
VERIFY_CONTRACTS=true
VERIFICATION_DELAY=30000

# Multisig Configuration (if using)
MULTISIG_OWNERS=0x1E274F39A44f1561b3Bb21148B9881075575676D,0x0000000000000000000000000000000000000000
MULTISIG_THRESHOLD=2

# Security
USE_HARDWARE_WALLET=false
HARDWARE_WALLET_PATH=m/44'/60'/0'/0/0

# Monitoring
DEFENDER_API_KEY=your-openzeppelin-defender-api-key
DEFENDER_API_SECRET=your-openzeppelin-defender-api-secret

# Testing
FORK_NETWORK=mainnet
FORK_BLOCK_NUMBER=latest
ENABLE_GAS_REPORTER=true
GAS_REPORTER_CURRENCY=USD
GAS_REPORTER_COINMARKETCAP_API_KEY=your-coinmarketcap-api-key

# Coverage
SOLIDITY_COVERAGE=true
COVERAGE_MATCHING_PATTERN=contracts/**/*.sol

# Development
DEBUG=hardhat:*
HARDHAT_VERBOSE=false

